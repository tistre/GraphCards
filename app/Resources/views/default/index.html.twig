{% extends 'default/base.html.twig' %}

{% block body_main %}
    <div class="container">
        <h1>List of nodes</h1>

        {{ form(searchForm) }}

        {% for node in nodes %}

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ node.uuid }}</h5>
                    <p class="card-text">{{ node.labels|join(', ') }}</p>
                    {% for nodeProperty in node.properties %}
                        <p class="card-text">{{ nodeProperty.name }}: {{ nodeProperty.value }}</p>
                    {% endfor %}
                </div>
                <div class="card-body">
                    <a href="{{ path('apiViewNode', {'nodeUuid': node.uuid}) }}" class="card-link">Details</a>
                    <a href="{{ path('apiEditNode', {'nodeUuid': node.uuid}) }}" class="card-link">Edit</a>
                </div>
            </div>

        {% endfor %}

        <a rel="alternate" href="{{ path('apiAddNode') }}">Add a node</a>
    </div>
{% endblock %}
