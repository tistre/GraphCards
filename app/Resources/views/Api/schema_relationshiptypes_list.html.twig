{% extends "Api/base.html.twig" %}

{% block body_main %}

    <h1>List of relationship types</h1>

    <ul>

        {% for relationshipType in relationshipTypes %}

            <li>
                <a href="{{ path('apiAddRelationship', {'type': relationshipType }) }}">{{ relationshipType }}</a>
            </li>

        {% endfor %}

    </ul>

    <a rel="alternate" href="{{ path('apiAddRelationship') }}">Add a relationship</a>

{% endblock %}
