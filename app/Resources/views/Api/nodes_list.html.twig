{% extends "Api/base.html.twig" %}

{% block body_main %}

    <h1>List of nodes</h1>

    {{ form(searchForm) }}

    <ul>

        {% for node in nodes %}

            <li>
                <a href="{{ path('apiViewNode', {'nodeUuid': node.uuid}) }}">{{ node.uuid }} [{{ node.labels|join(', ') }}]</a><br />
                {% for nodeProperty in node.properties %}
                    {% for propertyValue in nodeProperty.values %}
                        {{ nodeProperty.name }}: {{ propertyValue.value }}<br/>
                    {% endfor %}
                {% endfor %}
                <a rel="editform" href="{{ path('apiEditNode', {'nodeUuid': node.uuid}) }}">Edit</a>
            </li>

        {% endfor %}

    </ul>

    <a rel="alternate" href="{{ path('apiAddNode') }}">Add a node</a>

{% endblock %}
